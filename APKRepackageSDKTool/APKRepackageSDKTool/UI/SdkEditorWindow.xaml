<Window x:Class="APKRepackageSDKTool.UI.SdkEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APKRepackageSDKTool.UI"
        mc:Ignorable="d"
        Title="{Binding Path=SdkName}" Height="444" Width="502">
    <Grid>
        <TabControl Margin="10,10,10,34">
            <TabItem Header="字段设置">
                <Grid Background="#FFE5E5E5">
                    <ListBox x:Name="ListBox_ConfigList" Margin="10,40,10,34">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid >
                                    <Label Content="{Binding Path=Key}" Width="140" HorizontalAlignment="Left" />
                                    <TextBox Text="{Binding Path=Value}"  HorizontalAlignment="Right" Margin="0,0,50,0" Width="130"/>
                                    <Button Content="删除" HorizontalAlignment="Right" MinWidth="40" Tag="{Binding Path=Key}" Click="Button_ClickDelete"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Button Content="新增" Margin="0,0,10,10" Height="19" VerticalAlignment="Bottom" Click="Button_ClickAddConfigKey" HorizontalAlignment="Right" Width="75" />
                    <TextBox x:Name="TextBox_ConfigName" Margin="10,0,90,5" TextWrapping="Wrap" Text="" Height="23" VerticalAlignment="Bottom" />
                    <Label Content="Value不填则留给渠道设置，填了则作为默认值使用" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="340"/>
                </Grid>
            </TabItem>
            <TabItem Header="权限设置">
                <Grid Background="#FFE5E5E5">
                    <ListBox x:Name="ListBox_PermissionList" Margin="10,10,10,34">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ListBoxItem}">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid >
                                    <Label Content="{Binding Key}" Width="140" HorizontalAlignment="Left" />
                                    <Button Content="删除" HorizontalAlignment="Right" MinWidth="40" Tag="{Binding Key}" Click="Button_ClickDelete"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Button Content="新增" Margin="0,0,10,10" Height="19" VerticalAlignment="Bottom" Click="Button_ClickAddConfigKey" HorizontalAlignment="Right" Width="75" />
                    <TextBox x:Name="TextBox_PermissionName" Margin="10,0,90,5" TextWrapping="Wrap" Text="" Height="23" VerticalAlignment="Bottom" />


                </Grid>
            </TabItem>
        </TabControl>
        <Button Content="保存" Margin="0,0,10,10" Height="19" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="474" Click="Button_ClickSave" RenderTransformOrigin="-0.44,-3.474"/>


    </Grid>
</Window>
