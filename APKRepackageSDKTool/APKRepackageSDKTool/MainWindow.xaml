<Window x:Class="APKRepackageSDKTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APKRepackageSDKTool"
        mc:Ignorable="d"
        Title="APK重打包工具" Height="407.859" Width="684.35">
    <Grid>
        <Grid Margin="10,10,0,38" HorizontalAlignment="Left" Width="304">
            <TextBox x:Name="Text_APKPath" Margin="10,35,90,0" TextWrapping="NoWrap" RenderTransformOrigin="0.673,4.796" MaxLines="1" Height="23" VerticalAlignment="Top"/>
            <Label Content="APK目录" Margin="10,10,0,0" HorizontalAlignment="Left" Width="58" Height="25" VerticalAlignment="Top"/>
            <Button Content="浏览" Margin="219,39,10,0" Click="Button_ClickSelectAPK" Height="19" VerticalAlignment="Top"/>
            <Label Content="SDK库目录" Margin="10,106,0,0" HorizontalAlignment="Left" Width="103" Height="25" VerticalAlignment="Top" RenderTransformOrigin="0.524,-1.24"/>

            <TextBox x:Name="Text_APKExportPath" Margin="10,179,90,0" TextWrapping="NoWrap" RenderTransformOrigin="0.673,4.796" MaxLines="1" Height="23" VerticalAlignment="Top"/>
            <Button Content="浏览" Margin="219,135,10,0" Click="Button_ClickSelectSDKLibPath" Height="19" VerticalAlignment="Top" RenderTransformOrigin="0.92,0.526"/>

            <Label Content="KeyStore目录" Margin="10,58,0,0" HorizontalAlignment="Left" Width="103" Height="25" VerticalAlignment="Top" RenderTransformOrigin="0.534,0.64"/>
            <TextBox x:Name="Text_KeyStorePath" Margin="10,83,90,0" TextWrapping="NoWrap" RenderTransformOrigin="0.673,4.796" MaxLines="1" Height="23" VerticalAlignment="Top"/>
            <Button Content="浏览" Margin="219,87,10,0" Click="Button_ClickSelectKeyStore" Height="19" VerticalAlignment="Top" RenderTransformOrigin="0.92,0.526"/>

            <Button Content="重打包" Margin="0,0,10,10" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="Button_ClicRepackageAPK"/>
            <Label Content="APK导出目录" Margin="10,154,0,0" HorizontalAlignment="Left" Width="103" Height="25" VerticalAlignment="Top"/>
            <TextBox x:Name="Text_SDKLibPath" Margin="10,131,90,0" TextWrapping="NoWrap" RenderTransformOrigin="0.673,4.796" MaxLines="1" Height="23" VerticalAlignment="Top"/>
            <Button Content="浏览" Margin="219,179,10,0" Click="Button_ClickSelectExportPath" Height="19" VerticalAlignment="Top" RenderTransformOrigin="0.92,0.526"/>
        </Grid>
        <TextBox x:Name="Text_output" Margin="319,50,10,38" TextWrapping="Wrap"/>
        <Label Content="输出" Margin="319,20,302,0" RenderTransformOrigin="0.021,0.189" Height="25" VerticalAlignment="Top"/>
        <ProgressBar x:Name="Progress_repackage" Margin="10,0,10,10" Height="17" VerticalAlignment="Bottom"/>
        <Label x:Name="Text_progressName" Content="准备" Margin="10,0,10,7" Height="24" VerticalAlignment="Bottom" HorizontalContentAlignment="Center"/>

    </Grid>
</Window>
